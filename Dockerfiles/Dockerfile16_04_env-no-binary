From ubuntu:16.04
WORKDIR /run
ADD ./ub16-env /run

RUN apt update \
    && apt install -y g++ gcc libzmq3-dev libjsoncpp-dev python-dev libudev-dev llvm-4.0-dev wget lbzip2 cmake \
    && cd /run \
    && tar xf boost_1_65_1.tar.bz2 \
    && cd boost_1_65_1 \
    && ./bootstrap.sh --libdir=/usr/lib/x86_64-linux-gnu/ \
    && ./b2 \
    && ./b2 install
