From ubuntu:16.04

RUN apt update \
    && apt install -y g++ gcc libzmq3-dev libjsoncpp-dev python-dev libudev-dev llvm-4.0-dev wget lbzip2 cmake curl git pkg-config lsb-release \
    && curl https://sh.rustup.rs -sSf | sh -s -- -y --default-toolchain 1.28.0 --default-host x86_64-unknown-linux-gnu \
    && cd /run \
    && wget https://dl.bintray.com/boostorg/release/1.65.1/source/boost_1_65_1.tar.bz2 \
    && tar xf boost_1_65_1.tar.bz2 \
    && cd boost_1_65_1 \
    && ./bootstrap.sh --libdir=/usr/lib/x86_64-linux-gnu/ \
    && ./b2 \
    && ./b2 install \
    && cd ..\
    && rm -r boost_1_65_1 \
    && mkdir /aionr /run/libs
